{
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "build": "lerna run --parallel prebuild && tsc --build",
    "watch": "lerna run --parallel prebuild && tsc --build --watch",
    "clean": "npx shx rm -rf {.,packages/*}/{node_modules,lib,dist}",
    "fmt": "cargo fmt",
    "clippy": "cargo clippy --all-targets -- -D warnings -A clippy::result_large_err -A clippy::too_many_arguments"
  },
  "workspaces": [
    "packages/*"
  ],
  "pre-commit": [
    "fmt"
  ],
  "private": true,
  "dependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@coral-xyz/anchor-cli": "^0.29.0",
    "@coral-xyz/borsh": "^0.3.0",
    "@helium/crypto": "^4.6.2",
    "@metaplex-foundation/mpl-bubblegum": "^0.7.0",
    "@pythnetwork/client": "^2.22.0",
    "@solana/spl-account-compression": "^0.2.0",
    "@switchboard-xyz/switchboard-v2": "^0.0.165",
    "angry-purple-tiger": "^1.0.5",
    "lerna": "^8.1.0"
  },
  "devDependencies": {
    "@solana/spl-governance": "^0.3.17",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "mocha": "^9.0.3",
    "pre-commit": "^1.2.2",
    "prettier": "^2.6.2",
    "shx": "^0.3.4",
    "ts-mocha": "^10.0.0",
    "typescript": "^4.3.5"
  }
}
